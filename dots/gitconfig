[user]
	email = hodovicadin@gmail.com
	name = adinhodovic
[core]
  pager = "{                                                           \
      COLUMNS=$(tput cols);                                            \
      if [ $COLUMNS -ge 80 ] && [ -z $FZF_PREVIEW_COLUMNS ]; then      \
          delta --side-by-side -w $COLUMNS;                            \
      elif [ $COLUMNS -ge 160 ] && [ ! -z $FZF_PREVIEW_COLUMNS ]; then \
          delta --side-by-side -w $FZF_PREVIEW_COLUMNS;                \
      else                                                             \
          delta;                                                       \
      fi                                                               \
  }"
	excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
[init]
	templatedir = ~/.git-templates
	defaultBranch = main
[branch]
    sort = -committerdate
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = v -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[mergetool]
	keepBackup = false
[interactive]
  diffFilter = delta --color-only
[rebase]
	autoStash = true
[delta]
  features = decorations
  whitespace-error-style = 22 reverse
  plus-style = "syntax #024700"
  minus-style = "syntax #810000"
  # Use github theme later
  syntax-theme = Base16
  line-numbers = true
  navigate = true
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
[remote "origin"]
	gh-resolved = base
[credential]
	helper = store
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
